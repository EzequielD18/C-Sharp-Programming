Code:
using System;

public class Coding_Challenge_Two
{
    public static void Main()
    {
        int[] grades = new int[5] { 90, 87, 56, 78, 100 };

        Console.Write("Enter number of input grade values: ");
        int numGrades = int.Parse(Console.ReadLine());

        int[] userGrades = new int[numGrades];
        for (int i = 0; i < numGrades; i++)
        {
            Console.Write($"Enter Grade Value {i + 1}: ");
            userGrades[i] = int.Parse(Console.ReadLine());
        }

        int numFailures, numPasses;
        CalculatePassFail(userGrades, out numFailures, out numPasses);

        Console.WriteLine($"Number of Failure: {numFailures}");
        Console.WriteLine($"Number of Pass: {numPasses}");
    }


    public static void CalculatePassFail(int[] userGrades, out int numFailures, out int numPasses)
    {
        numFailures = 0;
        numPasses = 0;

        foreach (int grade in userGrades)
        {
            if (grade >= 75 && grade <= 100)
            {
                numPasses++;
            }
            else if (grade < 75)
            {
                numFailures++;
            }
        }
    }
}


